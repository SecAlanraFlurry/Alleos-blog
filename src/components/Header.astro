---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import Search from './Search.astro';
---

<header class="sticky top-0 z-50 bg-white/80 backdrop-blur-md transform transition-transform duration-300">
  <nav class="max-w-6xl mx-auto px-3 py-2">
    <div class="flex items-center justify-between gap-4">
      <h2 class="text-base font-bold hover:text-accent transition-colors duration-300">
        <a href="/">{SITE_TITLE}</a>
      </h2>
      
      <div class="hidden md:flex items-center gap-6 flex-1 justify-end">
        <div class="w-48">
          <Search />
        </div>
        <div class="flex items-center gap-6 text-sm">
          <HeaderLink href="/" class="hover:text-accent transition-colors duration-300">Home</HeaderLink>
          <HeaderLink href="/blog" class="hover:text-accent transition-colors duration-300">Blog</HeaderLink>
          <HeaderLink href="/about" class="hover:text-accent transition-colors duration-300">About</HeaderLink>
        </div>
      </div>

      <div class="md:hidden flex items-center gap-3">
        <div class="w-36">
          <Search />
        </div>
      </div>
    </div>
  </nav>
</header>

<!-- Mobile Bottom Navigation -->
<nav class="md:hidden fixed bottom-0 left-0 right-0 bg-white/80 backdrop-blur-md border-t z-50 transform transition-transform duration-300">
  <div class="flex justify-around py-2">
    <HeaderLink href="/" class="flex flex-col items-center p-1.5 transition-colors duration-300">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
      </svg>
      <span class="text-[10px] mt-1">Home</span>
    </HeaderLink>
    
    <HeaderLink href="/blog" class="flex flex-col items-center p-1.5 transition-colors duration-300">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2.5 2.5 0 00-2.5-2.5H15"></path>
      </svg>
      <span class="text-[10px] mt-1">Blog</span>
    </HeaderLink>
    
    <HeaderLink href="/about" class="flex flex-col items-center p-1.5 transition-colors duration-300">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
      </svg>
      <span class="text-[10px] mt-1">About</span>
    </HeaderLink>
  </div>
</nav>